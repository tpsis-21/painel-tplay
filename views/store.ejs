    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: '#2563eb',
                        'primary-hover': '#1d4ed8',
                        dark: '#0f172a',
                    },
                    borderRadius: {
                        lg: "var(--radius)",
                        md: "calc(var(--radius) - 2px)",
                        sm: "calc(var(--radius) - 4px)",
                    },
                }
            }
        }
    </script>
    <style type="text/css">
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');
        
        :root {
            --bg-main: #f8fafc;
            --text-main: #0f172a;
            --card-bg: #ffffff;
            --border-color: #e2e8f0;
            --muted-text: #64748b;
            --primary: #2563eb;
            --primary-hover: #1d4ed8;
            --radius: 24px;
        }

        .dark {
            --bg-main: #020617;
            --text-main: #f8fafc;
            --card-bg: #0f172a;
            --border-color: #1e293b;
            --muted-text: #94a3b8;
        }

        body { 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            background-color: var(--bg-main); 
            color: var(--text-main);
            transition: background-color 0.3s, color 0.3s;
            margin: 0;
        }

        .hero-gradient { 
            background: linear-gradient(135deg, #0f172a 0%, #1e40af 100%); 
        }

        .theme-toggle {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            z-index: 50;
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            color: var(--text-main);
            padding: 0.75rem;
            border-radius: 9999px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            width: 3rem;
            height: 3rem;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }
        
        .theme-toggle:hover {
            transform: scale(1.1);
        }

        .app-card { 
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }
        
        .app-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
            border-color: var(--primary);
        }

        .app-card::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, var(--primary) 0%, transparent 100%);
            opacity: 0;
            transition: opacity 0.5s;
            z-index: 0;
        }

        .app-card:hover::before {
            opacity: 0.05;
        }

        .app-card > * {
            position: relative;
            z-index: 1;
        }

        .text-muted { color: var(--muted-text); }
        
        /* Melhoria de contraste para botões e elementos interativos */
        .btn-primary {
            background-color: #2563eb;
            color: #ffffff;
            transition: all 0.2s;
        }
        .btn-primary:hover {
            background-color: #1d4ed8;
            box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.3);
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="min-h-screen">
    <button onclick="toggleTheme()" class="theme-toggle" aria-label="Alternar Tema">
        <i class="fas fa-moon dark:hidden"></i>
        <i class="fas fa-sun hidden dark:block text-yellow-400"></i>
    </button>

    <header class="hero-gradient text-white py-24 px-4 text-center relative overflow-hidden">
        <div class="max-w-7xl mx-auto relative z-10">
            <div class="w-20 h-20 bg-white/10 backdrop-blur-md rounded-3xl flex items-center justify-center mx-auto mb-8">
                <i class="fas fa-play text-4xl text-white"></i>
            </div>
            <h1 class="text-5xl md:text-7xl font-black mb-6 tracking-tight text-white">Central de <span class="text-blue-400">Ajuda</span></h1>
            <p class="text-xl md:text-2xl text-blue-100/90 max-w-2xl mx-auto font-medium mb-12">
                Tudo o que você precisa para configurar o TopPlay em qualquer dispositivo.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
                <a href="/tutorial" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-2xl font-extrabold text-lg shadow-xl transition-all flex items-center gap-3">
                    <i class="fas fa-video"></i> Tutoriais em Vídeo
                </a>
                <button onclick="document.getElementById('apps-section').scrollIntoView({ behavior: 'smooth' })" class="bg-slate-800 hover:bg-slate-900 text-white border border-white/10 px-8 py-4 rounded-2xl font-extrabold text-lg transition-all flex items-center gap-3">
                    <i class="fas fa-download"></i> Baixar Apps
                </button>
            </div>
        </div>
    </header>

    <main id="apps-section" class="max-w-7xl mx-auto px-4 py-20">
        <div class="flex items-center justify-between mb-12">
            <h2 class="text-3xl font-black">Nossos Aplicativos</h2>
            <div class="hidden md:flex gap-6 text-sm font-bold text-muted uppercase tracking-wider">
                <span>Android TV</span>
                <span>Fire Stick</span>
                <span>Mobile</span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% if (apps.length === 0) { %>
                <div class="col-span-full py-20 text-center opacity-50">
                    <i class="fas fa-ghost text-5xl mb-4"></i>
                    <p class="text-xl font-bold">Nenhum app disponível no momento.</p>
                </div>
            <% } else { %>
                <% apps.forEach(app => { %>
                    <div class="app-card p-8 rounded-[2.5rem] flex flex-col">
                        <div class="w-24 h-24 mx-auto mb-8 bg-slate-100 dark:bg-slate-800 rounded-3xl p-4 shadow-inner">
                            <img src="<%= app.logo %>" alt="<%= app.name %>" class="w-full h-full object-contain rounded-xl">
                        </div>
                        <h3 class="text-2xl font-black text-center mb-4"><%= app.name %></h3>
                        <p class="text-muted text-center font-medium mb-8 flex-1">
                            Versão oficial otimizada para alto desempenho e estabilidade.
                        </p>
                        <a href="/<%= app.slug %>" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-4 rounded-2xl font-black text-center shadow-lg shadow-blue-600/20 transition-all">
                            Baixar Agora
                        </a>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </main>

    <footer class="py-12 text-center border-t mt-20" style="border-color: var(--border-color);">
        <p class="text-muted font-bold">© 2026 TopPlay. Todos os direitos reservados.</p>
    </footer>

    <script>
        function toggleTheme() {
            const html = document.documentElement;
            const isDark = html.classList.toggle('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
        }

        // Carregar tema salvo ou preferência do sistema
        const savedTheme = localStorage.getItem('theme');
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

        if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>
</html>