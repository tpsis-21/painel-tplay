    <script>
        function addTutorial() {
            const container = document.getElementById('tutorials-container');
            const id = Date.now();
            const div = document.createElement('div');
            div.className = 'relative p-6 bg-muted/20 rounded-[2rem] border border-border/50 group hover:border-primary/30 transition-all animate-in fade-in slide-in-from-top-4 duration-500';
